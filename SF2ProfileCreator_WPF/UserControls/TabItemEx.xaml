<UserControl x:Class="SF2ProfileCreator_WPF.UserControls.TabItemEx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SF2ProfileCreator_WPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="70">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtbckName" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
        <Button Grid.Column="1" 
                Content="x" 
                HorizontalAlignment="Right" 
                Width="20" 
                Click="TabItemEx_Close" 
                Background="Transparent"/>
    </Grid>
</UserControl>
